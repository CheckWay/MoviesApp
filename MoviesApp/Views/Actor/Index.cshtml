@using System.Linq
@model IEnumerable<MoviesApp.ViewModels.Actor.ActorViewModel>

    @{
       
        ViewData["Title"] = "Информация об актерах";
    }

    <h1>Информация об актерах</h1>

    <p>
        <a asp-action="Create">Создать нового актера</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>
                <label asp-for="@Model.First().Name"></label>
            </th>
            <th>
                <label asp-for="@Model.First().Surname"></label>
            </th>
            <th>
                <label asp-for="@Model.First().Birth"></label>
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                @item.Birth.ToString("dd.MM.yyyy")
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Удалить</a>
            </td>
        </tr>
        }
        </tbody>
    </table>